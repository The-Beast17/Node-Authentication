<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="public\style.css">
</head>
<style>
    * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html,body {
  height: 100%;
  width: 100%;
}
.cards {
  height: 100%;
  width: 100%;
  display: flex;
}

.card{
    width: 15%;
    height: max-content;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding : 20px;
    border : 1px solid rgba(0, 0, 0, 0.564);
    border-radius: 20px;
    margin: 0 20px;

}

.card img{
    height : 100px;
    width : 100px;
    object-fit: cover;
    object-position: center;
    border-radius: 50%;
}

.card h1{
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 600;
    line-height: 3;
}

</style>
<body>
    <main class="cards">
        <!-- <% const arr = ["vishal" , "hardik"] %> -->
        <% users.map((data)=>{ %>
        <div class="card">
            <img src="<%= data.profile_img %>" alt="">
            <h1><%= data.userName %></h1>
            <p><%= data.email %></p>
        </div>
        <% }) %>
    </main>
</body>
</html>